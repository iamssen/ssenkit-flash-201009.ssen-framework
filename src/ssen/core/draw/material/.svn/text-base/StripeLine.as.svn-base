package ssen.core.draw.material {
import flash.display.GraphicsSolidFill;

/**
 * StripeMaterial 에 사용되는 Stripe 요소
 * @author ssen (i@ssen.name)
 */
public class StripeLine {
	private var _fill : GraphicsSolidFill;
	public var size : Number;

	public function StripeLine(size : Number, color : uint, alpha : Number = 1) {
		_fill = new GraphicsSolidFill(color, alpha);
		this.size = size;
	}

	public function get fill() : GraphicsSolidFill {
		return _fill;
	} 
}
}
